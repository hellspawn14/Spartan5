<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.spartan5"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/spartan_launch_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        
        <!-- Actividad de inicio -->
        <activity 
            android:name="com.spartan.android.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/generalnotitle">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Menu principal -->
        <activity 
            android:name="com.spartan.android.MenuPrincipalActivity"
            android:screenOrientation="portrait"
            android:theme="@style/generalnotitle">    
        </activity>
        <!-- Buscar evento -->
        <activity
            android:name="com.spartan.android.BuscarEventoActivity"
            android:screenOrientation="portrait"
            android:theme="@style/generalnotitle">    
        </activity>
    </application>
</manifest>

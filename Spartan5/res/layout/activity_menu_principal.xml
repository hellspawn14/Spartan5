<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/splashScreenBackground"
    android:orientation="vertical" >

    <!-- Estadisticas del juegador -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:layout_weight="1">
        <!-- Ranking -->
        <ImageButton
            android:id="@+id/imagenBadge"
            android:scaleType="fitCenter"
        	android:background="@color/splashScreenBackground"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/badge_sample"
            android:layout_weight="1" />
        
		<!-- Puntaje del juegador -->
		<RatingBar
            android:id="@+id/estadisticasJuegador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="true"
			android:focusable="false"
			android:clickable="false"
            android:numStars="5"
            android:rating="4.0"
            android:stepSize="1.0" />
	</LinearLayout>
	
    <View style="@style/Divider"/>
    
	<!-- Informacion encuentros previos -->
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="100dp"
	    android:orientation="horizontal" >

		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_weight="1" >
			<ImageView
			    android:id="@+id/imageView2"
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:src="@drawable/ball_soccer"
			    android:layout_weight="1" />
			
			<TextView
			    android:id="@+id/numFutbol"
             	android:layout_width="wrap_content"
             	android:layout_height="wrap_content"
             	android:layout_gravity="center"
             	android:text="10"
             	android:textColor="@color/white" />
		</LinearLayout>
			
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_weight="1" >
			<ImageView
			    android:id="@+id/imageView3"
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:src="@drawable/ball_basket"
			    android:layout_weight="1" />
			
			<TextView
			    android:id="@+id/numBasket"
             	android:layout_width="wrap_content"
             	android:layout_height="wrap_content"
             	android:layout_gravity="center"
             	android:text="10" 
             	android:textColor="@color/white" />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_weight="1" >
			<ImageView
			    android:id="@+id/imageView4"
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:src="@drawable/ball_volei"
			    android:layout_weight="1" />
			
			<TextView
			    android:id="@+id/numVoley"
             	android:layout_width="wrap_content"
             	android:layout_height="wrap_content"
             	android:layout_gravity="center"
             	android:text="10"
             	android:textColor="@color/white"  />
		</LinearLayout>
		
		<LinearLayout
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:orientation="vertical"
		    android:layout_weight="1" >
			<ImageView
			    android:id="@+id/imageView5"
			    android:layout_width="wrap_content"
		    	android:layout_height="wrap_content"
			    android:src="@drawable/ball_tennis"
			    android:layout_weight="1" />
			
			<TextView
			    android:id="@+id/numTennis"
             	android:layout_width="wrap_content"
             	android:layout_height="wrap_content"
             	android:layout_gravity="center"
             	android:text="10" 
             	android:textColor="@color/white" />
		</LinearLayout>
    </LinearLayout>

	<!-- Comandos de la vista -->
	
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical" >

		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
			<Button
			    android:id="@+id/button1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="B1" 
			    android:onClick="buscarEvento" />
			<Button
			    android:id="@+id/button2"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="B2" />
			<Button
			    android:id="@+id/button3"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="B3" />
		</LinearLayout>
		<LinearLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="horizontal" >
			<Button
			    android:id="@+id/button4"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="B4" />
			<Button
			    android:id="@+id/button5"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="B5" />
			<Button
			    android:id="@+id/button6"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content"
			    android:layout_weight="1"
			    android:text="B6" />
		</LinearLayout>
		
		

	</LinearLayout>

</LinearLayout>